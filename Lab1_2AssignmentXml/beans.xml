<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">   
    <bean id="employee" class="com.cg.employee.Employee">
    <property name="employeeId" value="101" />
    <property name="employeeName" value="Janani" />
    <property name="salary" value="50000" />
    <property name="businessUnit" value="Pes" />
    <property name="age" value="24" />
    </bean>   
    <bean id="sbu" class="com.cg.employee.SBU">
    <property name="sbuCode" value="PES-BU" />
    <property name="sbuName" value="Product Engineering Service" />
    <property name="sbuHead" value="Kiran Rao"/>
    </bean>    
  	</beans>